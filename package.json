{
  "name": "@tarikjabiri/dxf",
  "version": "3.0.0",
  "description": "A DXF writer written in TypeScript.",
  "main": "./lib/index.js",
  "module": "./lib/index.mjs",
  "types": "./lib/index.d.ts",
  "repository": "https://github.com/dxfjs/writer",
  "author": "Tarik EL JABIRI",
  "license": "MIT",
  "homepage": "https://dxf.vercel.app",
  "bugs": {
    "url": "https://github.com/dxfjs/writer/issues",
    "email": "dxfjss@gmail.com"
  },
  "scripts": {
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "build": "tsup ./src/index.ts --dts --format esm,cjs -d lib",
    "examples": "tsx ./examples",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs",
    "eslint": "eslint . --fix"
  },
  "files": [
    "lib/**/*"
  ],
  "devDependencies": {
    "@types/node": "^20.2.1",
    "@types/opentype.js": "^1.3.4",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "@vitest/coverage-c8": "^0.31.1",
    "eslint": "^8.41.0",
    "tsup": "^6.7.0",
    "tsx": "^3.12.7",
    "typescript": "^5.0.4",
    "vitepress": "1.0.0-alpha.76",
    "vitest": "^0.31.1",
    "vue": "^3.3.4"
  },
  "funding": "https://github.com/sponsors/dxfjs",
  "keywords": [
    "js-dxf",
    "ts-dxf",
    "dxf",
    "writer",
    "js",
    "ts"
  ],
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@algolia/client-search"
      ]
    }
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=8"
  }
}
