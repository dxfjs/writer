{
	"name": "@tarikjabiri/dxf",
	"version": "2.0.0-alpha3",
	"description": "A JavaScript interface to Dxf written in TypeScript.",
	"main": "lib/index.js",
	"typings": "lib/index.d.ts",
	"type": "module",
	"repository": "https://github.com/tarikjabiri/dxf",
	"author": "Tarik EL JABIRI",
	"license": "MIT",
	"scripts": {
		"test": "vitest",
		"coverage": "vitest run --coverage",
		"build": "rollup -c",
		"example": "node --experimental-specifier-resolution=node examples/example.js",
		"docs": "cd www && pnpm build --out-dir ../docs && cd ..",
		"lint": "eslint src",
		"lint:fix": "eslint src --fix",
		"prettier:check": "prettier --check .",
		"prettier:write": "prettier --write ."
	},
	"files": [
		"lib/**/*"
	],
	"devDependencies": {
		"@types/node": "^17.0.7",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"c8": "^7.11.3",
		"eslint": "^8.16.0",
		"eslint-config-prettier": "^8.5.0",
		"prettier": "2.6.2",
		"rollup": "^2.40.0",
		"rollup-plugin-typescript2": "^0.31.1",
		"ts-node": "^10.2.1",
		"typescript": "^4.7.3",
		"vitest": "^0.15.1"
	},
	"keywords": [
		"js-dxf",
		"ts-dxf",
		"dxf",
		"dxf-writer"
	]
}
